<% content_for :title do %>
    <title>Log In</title>
<% end %>

<div class="container">
  <h1>Log in</h1>
  
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <br>
      <%= f.text_field :email, required: false, autofocus: true, :class => 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :password %>
      <br>
      <%= f.password_field :password, required: false, :class => 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.label :remember_me %>
    </div>
  
    <div class="form-actions">
      <%= f.submit "Log in", :class => 'btn btn-default' %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>