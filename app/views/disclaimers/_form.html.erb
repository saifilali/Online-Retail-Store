<%= simple_form_for(@disclaimer) do |f| %>

  <%= f.error_notification %>

  <div class="form-group">
    
    <%= f.label :message %>
        
    <br>
        
    <%= f.text_field :message, :class => 'form-control' %>
    
  </div>
  
  <div class="form-group">
    
    <%= f.label :page, 'Page to appear on' %>
        
    <br>

    <%= f.select :page, disclaimer_pages, {}, { :class => 'form-control' } %>
    
  </div>

  <div class="form-actions">
    
    <%= f.submit 'Submit', :class => 'btn btn-default' %>
    
  </div>
  
<% end %>
