<%= simple_form_for @review  do |f| %>

    <div class="form-group">
        
        <%= f.label :name, 'Reviewer\'s Name' %>
        
        <br>
        
        <%= f.text_field :name, :class => 'form-control' %>

    </div>
    
    <div class="form-group">

        <%= f.label :comment %>
        
        <br>
        
        <%= f.text_field :comment, :class => 'form-control' %>
    
    </div>
    
    <div class="actions">
        
        <%= f.submit 'Submit', :class => 'btn btn-default' %>
        
    </div>
    
<% end %>